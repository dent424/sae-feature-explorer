---
interface CoactivationData {
  feature_idx: number;
  count: number;
  percent: number;
}

interface Props {
  coactivations: CoactivationData[];
  interpretations?: Record<number, string>;
}

const { coactivations, interpretations = {} } = Astro.props;

// Truncate interpretation for tooltip
function truncateInterpretation(text: string, maxLength: number = 150): string {
  if (text.length <= maxLength) return text;
  return text.slice(0, maxLength).trim() + '...';
}
---

<div class="space-y-2">
  {coactivations.slice(0, 15).map((co) => {
    const interpretation = interpretations[co.feature_idx];
    return (
      <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0 group">
        <div class="flex-1 min-w-0 relative">
          <a
            href={`/features/${co.feature_idx}`}
            class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center gap-1"
          >
            Feature {co.feature_idx}
            {interpretation && (
              <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            )}
          </a>
          {interpretation && (
            <div class="invisible group-hover:visible opacity-0 group-hover:opacity-100 transition-all duration-200 absolute left-0 top-full mt-2 z-50 w-80 max-w-md p-3 bg-gray-900 text-white text-sm rounded-lg shadow-xl pointer-events-none">
              <div class="font-semibold mb-1 text-gray-100">Feature {co.feature_idx}</div>
              <div class="text-gray-300 leading-relaxed">{truncateInterpretation(interpretation)}</div>
              <div class="absolute -top-2 left-4 w-0 h-0 border-l-8 border-r-8 border-b-8 border-l-transparent border-r-transparent border-b-gray-900"></div>
            </div>
          )}
        </div>
        <div class="flex items-center space-x-4 text-sm flex-shrink-0">
          <span class="text-gray-600">{co.count.toLocaleString()} times</span>
          <span class="bg-gray-100 px-2 py-0.5 rounded text-gray-500">
            {co.percent.toFixed(2)}%
          </span>
        </div>
      </div>
    );
  })}
  {coactivations.length === 0 && (
    <p class="text-gray-400 text-sm">No coactivation data available</p>
  )}
</div>
