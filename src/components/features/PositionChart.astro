---
interface PositionBin {
  range: string;
  label: string;
  count: number;
  percent: number;
}

interface Props {
  bins: PositionBin[];
}

const { bins } = Astro.props;

// Find max percent for scaling
const maxPercent = Math.max(...bins.map(b => b.percent), 1);
---

<div class="space-y-3">
  {bins.map((bin) => (
    <div class="flex items-center space-x-4">
      <div class="w-24 text-sm text-gray-600 text-right">
        {bin.label}
        <span class="text-xs text-gray-400 ml-1">({bin.range})</span>
      </div>
      <div class="flex-1 h-6 bg-gray-100 rounded overflow-hidden">
        <div
          class="h-full bg-blue-500 rounded transition-all"
          style={`width: ${(bin.percent / maxPercent) * 100}%`}
        />
      </div>
      <div class="w-20 text-sm text-gray-600 text-right">
        {bin.percent.toFixed(1)}%
      </div>
    </div>
  ))}
  {bins.length === 0 && (
    <p class="text-gray-400 text-sm">No position distribution data available</p>
  )}
</div>
