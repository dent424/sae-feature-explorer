---
interface Props {
  activationRate: number;
  meanWhenActive: number;
  maxActivation: number;
  stdWhenActive?: number;
}

const { activationRate, meanWhenActive, maxActivation, stdWhenActive } = Astro.props;

// Format as percentage or decimal
const formatPercent = (val: number) => (val * 100).toFixed(4) + '%';
const formatDecimal = (val: number) => val.toFixed(4);
---

<div class="grid grid-cols-2 md:grid-cols-4 gap-4 bg-gray-50 rounded-lg p-4">
  <div>
    <span class="text-sm text-gray-500 block">Activation Rate</span>
    <span class="text-lg font-bold text-gray-900">{formatPercent(activationRate)}</span>
  </div>

  <div>
    <span class="text-sm text-gray-500 block">Mean (active)</span>
    <span class="text-lg font-bold text-gray-900">{formatDecimal(meanWhenActive)}</span>
  </div>

  <div>
    <span class="text-sm text-gray-500 block">Max Activation</span>
    <span class="text-lg font-bold text-gray-900">{formatDecimal(maxActivation)}</span>
  </div>

  {stdWhenActive !== undefined && (
    <div>
      <span class="text-sm text-gray-500 block">Std Dev</span>
      <span class="text-lg font-bold text-gray-900">{formatDecimal(stdWhenActive)}</span>
    </div>
  )}
</div>
