---
import BaseLayout from '../../../../components/layout/BaseLayout.astro';
import FeatureCard from '../../../../components/features/FeatureCard.astro';
import SortDropdown from '../../../../components/features/SortDropdown.astro';
import FeatureJumpInput from '../../../../components/features/FeatureJumpInput.astro';
import FilterBar from '../../../../components/features/FilterBar.astro';
import { loadFeaturesIndex, paginateFeatures, sortFeatures, getSortLabel, SORT_OPTIONS, type SortOption } from '../../../../lib/data';

export function getStaticPaths() {
  const features = loadFeaturesIndex();
  const perPage = 100;
  const totalPages = Math.ceil(features.length / perPage);

  // Generate paths for all sort options (except 'rank') and all pages (2+)
  const paths: { params: { sort: string; page: string } }[] = [];

  for (const opt of SORT_OPTIONS) {
    if (opt.value === 'rank-ctrl') continue; // Default sort handled at /features

    for (let page = 2; page <= totalPages; page++) {
      paths.push({
        params: { sort: opt.value, page: String(page) }
      });
    }
  }

  return paths;
}

const { sort, page } = Astro.params;
const currentSort = sort as SortOption;
const pageNum = parseInt(page as string, 10);
const allFeatures = sortFeatures(loadFeaturesIndex(), currentSort);
const perPage = 100;
const { data: features, totalPages, hasNext, hasPrev } = paginateFeatures(allFeatures, pageNum, perPage);
const sortLabel = getSortLabel(currentSort);
const basePath = `/features/sort/${currentSort}`;

// Redirect if page is out of range
if (pageNum < 1 || pageNum > totalPages) {
  return Astro.redirect(basePath);
}
---

<BaseLayout title={`Features (${sortLabel}) - Page ${pageNum} - SAE Feature Explorer`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">Features</h1>
          <p class="text-gray-600 mt-2">
            Browsing {allFeatures.length.toLocaleString()} features.
            Page {pageNum} of {totalPages}.
          </p>
        </div>
        <div class="flex items-center gap-4 flex-wrap">
          <FeatureJumpInput />
          <a
            href="/features/search"
            class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50"
          >
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            Search
          </a>
          <SortDropdown currentSort={currentSort} />
        </div>
      </div>
    </div>

    <FilterBar />

    <div class="grid gap-4">
      {features.map((feature) => (
        <FeatureCard feature={feature} />
      ))}
    </div>

    <!-- Pagination -->
    <div class="mt-8 flex justify-center space-x-2">
      {hasPrev ? (
        <a href={pageNum === 2 ? basePath : `${basePath}/${pageNum - 1}`} class="px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded">
          Previous
        </a>
      ) : (
        <span class="px-4 py-2 text-gray-400 bg-gray-100 rounded">
          Previous
        </span>
      )}

      {pageNum > 2 && (
        <>
          <a href={basePath} class="px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded">
            1
          </a>
          {pageNum > 3 && <span class="px-4 py-2 text-gray-400">...</span>}
        </>
      )}

      {pageNum === 2 && (
        <a href={basePath} class="px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded">
          1
        </a>
      )}

      <span class="px-4 py-2 bg-blue-600 text-white rounded">
        {pageNum}
      </span>

      {pageNum < totalPages - 1 && (
        <>
          {pageNum < totalPages - 2 && <span class="px-4 py-2 text-gray-400">...</span>}
          <a href={`${basePath}/${totalPages}`} class="px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded">
            {totalPages}
          </a>
        </>
      )}

      {pageNum === totalPages - 1 && (
        <a href={`${basePath}/${totalPages}`} class="px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded">
          {totalPages}
        </a>
      )}

      {hasNext ? (
        <a href={`${basePath}/${pageNum + 1}`} class="px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded">
          Next
        </a>
      ) : (
        <span class="px-4 py-2 text-gray-400 bg-gray-100 rounded">
          Next
        </span>
      )}
    </div>

    <!-- Keyboard shortcuts hint -->
    <div class="mt-4 text-center text-xs text-gray-400">
      Press <kbd class="px-1.5 py-0.5 bg-gray-100 border border-gray-300 rounded text-gray-600">/</kbd> to search
    </div>
  </div>

  <script>
    // Keyboard shortcut: / to search
    document.addEventListener('keydown', (e) => {
      if (e.target instanceof HTMLInputElement || e.target instanceof HTMLTextAreaElement) return;
      if (e.key === '/') {
        e.preventDefault();
        window.location.href = '/features/search';
      }
    });

    // Save scroll position before navigating to feature detail
    document.querySelectorAll('[data-feature-card]').forEach(card => {
      card.addEventListener('click', () => {
        sessionStorage.setItem('featureListScroll', String(window.scrollY));
        sessionStorage.setItem('featureListUrl', window.location.href);
      });
    });

    // Restore scroll position if returning from feature detail
    const savedScroll = sessionStorage.getItem('featureListScroll');
    const savedUrl = sessionStorage.getItem('featureListUrl');
    if (savedScroll && savedUrl === window.location.href) {
      window.scrollTo(0, parseInt(savedScroll, 10));
      sessionStorage.removeItem('featureListScroll');
      sessionStorage.removeItem('featureListUrl');
    }
  </script>
</BaseLayout>
